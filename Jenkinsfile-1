pipeline {
  agent {
    node {
       label 'workstation'
    }
  }

  parameters {
           choice(name: 'ENV', choices: ['dev', 'prod'], description: 'Pick ENV')
           choice(name: 'COMPONENT', choices: ['frontend', 'catalogue', 'mongodb'], description: 'Pick component')
  }

  environment {
    SSH = credentials('SSH')
  }

 stages {

   stage('Clone Ansible Repo') {
     steps {
       git branch: 'main', url: 'https://github.com/DShankarGoud/roboshop-ansible.git'

     }
   }

   stage('Create Ec2 Server') {
     steps {
       sh 'bash create-ec2-with-env.sh ${COMPONENT} ${ENV}'
     }
   }

  stage('Run Ansible') {
    steps {
      sh 'ansible-playbook -i roboshop.yml -e HOST=${COMPONENT} -e HOST_NAME=${COMPONENT} -e ENV=${ENV} -e -e ansible_user=${SSH_USR} -e ansible_password=${SSH_PSW}'
    }
  }

 }

}
